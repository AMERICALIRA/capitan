<div class="container">
  <div class="row">
    <div class="page-header clearfix">
      <h1 class="pull-left">Unidades</h1>  
      <div class="pull-right">
        <%= link_to 'Crear Unidad', new_course_unit_path(@course), :class => "btn btn-primary btn-new" %>
      </div>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Course</th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @units.each do |unit| %>
          <tr>
            <td><%= unit.title %></td>
            <td><%= unit.description %></td>
            <td><%= unit.course.name %></td>
            <td>
              <%= link_to 'Ver Unidad', course_unit_path(@course,unit) %>  |  
              <%= link_to 'Editar', edit_course_unit_path(@course,unit) %>  |  
              <%= link_to 'Eliminar', [@course,unit], method: :delete, data: { confirm: '¿Está seguro?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>