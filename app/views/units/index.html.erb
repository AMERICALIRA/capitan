<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    
    <h1>Unidades del curso</h1>
    
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Course</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @units.each do |unit| %>
          <tr>
            <td><%= unit.title %></td>
            <td><%= unit.description %></td>
            <td><%= unit.course.name %></td>
            <td><%= link_to 'Show', course_unit_path(@course,unit) %></td>
            <td><%= link_to 'Edit', edit_course_unit_path(@course,unit) %></td>
            <td><%= link_to 'Destroy', [@course,unit], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <br>
    
    <%= link_to 'New Unit', new_course_unit_path(@course) %>    
  </div>
</div>