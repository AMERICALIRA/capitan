<div class="container-fluid p-20">
    <div class="breadcrumb">
      <%= link_to @course.name, course_path(@course) %> / 
      <span><%= @unit.title %></span>
    </div>
    <div class="page-header clearfix">
      <h1 class="pull-left">Detalle de la unidad</h1>
      <div class="pull-right">
        <%= link_to 'Editar', edit_course_unit_path(@course,@unit), :class => "btn btn-primary" %>
      </div>
    </div>
    <div>
      <p>
        <strong>Sequence:</strong>
        <%= @unit.sequence %>
      </p>  
      <p>
        <strong>Title:</strong>
        <%= @unit.title %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= @unit.description %>
      </p>
    </div>
    <br><br>
    <div>
      <%= link_to "Nueva Lección", new_course_unit_lesson_path(@course,@unit), :class => "btn btn-primary" %>
    </div>
    <br><br>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Título</th>
          <th>Unidad</th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @unit.lessons.order(:sequence).each do |lesson| %>
          <tr>
            <td><%= lesson.sequence %></td>
            <td><%= lesson.title %></td>
            <td><%= lesson.unit.title %></td>
            <td>
              <%= link_to 'Ver lección', course_unit_lesson_path(@course,@unit,lesson) %>  |  
              <%= link_to 'Editar', edit_course_unit_lesson_path(@course,@unit,lesson) %>  |  
              <%= link_to 'Eliminar', [@course,@unit,lesson], method: :delete, data: { confirm: '¿Está seguro?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>