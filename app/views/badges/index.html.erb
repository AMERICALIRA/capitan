<div class="container-fluid p-20">
  <div class="page-header clearfix">
    <div class="pull-left">
      <h1 class="">Badges</h1>
    </div>

    <div class="pull-right">
      <%= link_to 'Nuevo Badge', new_badge_path, class: 'btn btn-primary btn-new' %>
    </div>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @badges.each do |badge| %>
        <tr>
          <td><%= image_tag badge.image.url(:normal) %></td>
          <td><%= badge.name %></td>
          <td><%= link_to 'Editar', edit_badge_path(badge) %></td>
          <td><%= link_to 'Eliminar', badge, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>