<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Nombres</th>
      <th>Email</th>
      <th>Teléfono 1</th>
      <th>Teléfono 2</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= link_to user.code, user %></td>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone1 %></td>
        <td><%= user.phone2 %></td>

        <% if user.disable? %>
          <td><a href="#" class="enable-user" data-user-id="<%= user.id %>">Habilitar</a></td>
        <% else %>
          <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <% end %>

        <% if user.student? && !user.disable? %>
          <td><a href="#" class="disable-user" data-user-id="<%= user.id %>">Deshabilitar</a></td>
        <% end %>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
