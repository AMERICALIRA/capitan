<div class="container-fluid p-20">
  <div class="page-header clearfix">
      <h1 class="pull-left">Tracks</h1>
      <div class="pull-right">
        <%= link_to 'Crear un nuevo track', new_track_path, :class => "btn btn-primary btn-new" %>
      </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Duración</th>
        <th></th>
      </tr>
    </thead>
  
    <tbody>
      <% @tracks.each do |track| %>
        <tr>
          <td><%= link_to track.name, track %></td>
          <td><%= track.description %></td>
          <td><%=  %></td>
          <td>
            <%= link_to 'Editar', edit_track_path(track) %>
            <%= link_to 'Eliminar', track, method: :delete, data: { confirm: '¿Estás seguro?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>