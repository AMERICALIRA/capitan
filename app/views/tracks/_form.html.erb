<%= simple_form_for @track do |f| %>
  <div class="form-inputs">
    <%= f.input :name %><br>
    <%= f.input :description %><br>
    <%= f.input :syllabus %><br>
    <%= f.input :color %><br>
    <%= f.input :icon %><br />
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar', tracks_path, :class => 'btn btn-danger' %>
  </div>
<% end %>
