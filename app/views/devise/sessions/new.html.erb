<div class="cell">
  <div class="center">
    <h1 class="home-title thin">¡Bienvenida!</h1>
  </div>

  <div class="form form-session">
    <h4 class="thin mb-20">Ingresa tu DNI para poder comenzar </h4>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :dni, label: false, required: false, autofocus: true, placeholder: "DNI" %>
        <%= f.input :password, label: false, required: false, :class => "thin", placeholder: "Contraseña" %>
      </div>
      <div class="form-actions mb-20">
        <%= f.button :submit, "Ingresar", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>