<%= simple_form_for(@video) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %><br>
    <%= f.input :youtube, hint: "Ingresa el ID del Video. Ej: https://www.youtube.com/watch?v=_QTag-SbZ0o. El ID es _QTag-SbZ0o"  %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
    <%= link_to 'Cancelar', videos_path, :class => "btn btn-danger" %>
  </div>
<% end %>
