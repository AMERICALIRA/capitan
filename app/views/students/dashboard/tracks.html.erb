<%= render 'shared/students/header/frame' %>
<section id="tracks">
  <div class="container pv-49 ph-7">
    <% @tracks.each_slice(4) do |row| %>
      <div class="row m-0">
        <% row.each do |track| %>
          <div class="col-sm-3 col-xs-12">
            <%= link_to students_tracks_path(track.id), class: "track" do %>
              <div class="color" style="background-color:<%= track.color %>">
                <div class="icon"></div>
              </div>
              <div class="content">
                <h2><%= track.name %></h2>
                <p><%= track.description %></p>
                <hr>
                <div class="link">
                   empezar &rarr;
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
