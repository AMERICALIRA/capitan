<%= simple_form_for @course do |f| %>
  <%= f.input :name, :class => "short" %>
  <%= f.input :description %>
  <%= f.input :color %>
  <%= f.input :avatar %>
  <%= f.input :background_image %>
  <%= f.button :submit, :class => 'btn btn-success' %>
  <%= link_to 'Cancelar', courses_path, :class => 'btn btn-danger' %>
<% end %>
